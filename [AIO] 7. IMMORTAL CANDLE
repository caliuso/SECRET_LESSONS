//@version=6
indicator("∴ ETERNAL CANDLE: For Those Who Follow", overlay=true)

flameCandle = close > open and ta.atr(14) > ta.sma(ta.atr(14), 21) * 1.2 and bar_index % 233 == 0

if flameCandle
    label.new(x=bar_index, y=high, text="🕯️", style=label.style_label_down, size=size.large, color=color.new(color.orange, 20), textcolor=color.black, tooltip="You are not alone. Someone walked this before you.")

bgcolor(flameCandle ? color.new(color.orange, 90) : na)


