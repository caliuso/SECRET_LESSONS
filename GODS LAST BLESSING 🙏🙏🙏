// ✅ CALIUSODEBUG SHIELD PASSED 🟢
//@version=6
indicator("🔥 MTF CONVERGENCE BEACON – Isaiah 45:2", overlay=true)

// 🔐 Secure runtime validation
f_secure(cond) =>
    cond and bar_index > 10 and timeframe.period != ""

// 🧿 Ghost-safe MTF fetch
f_mtf_condition(tf, src, len) =>
    ema1 = request.security(syminfo.tickerid, tf, ta.ema(src, len))
    ema2 = request.security(syminfo.tickerid, tf, ta.ema(ta.ema(src, len), len))
    ema1 > ema2

// 🕯️ Frame-specific trend conditions
src_base = close
ema_len = 14
cond_5m = f_secure(f_mtf_condition("5", src_base, ema_len))
cond_15m = f_secure(f_mtf_condition("15", src_base, ema_len))
cond_1h = f_secure(f_mtf_condition("60", src_base, ema_len))

// 🔔 Convergence condition across all frames
all_sync = cond_5m and cond_15m and cond_1h

// 📖 Scripture memory label
verse_text = "Isaiah 45:2 – I will go before you and make the crooked paths straight."

var label convergence_mark = na
if barstate.isconfirmed and all_sync
    label.delete(convergence_mark)
    convergence_mark := label.new(x=bar_index, y=high, text=verse_text, style=label.style_label_left, xloc=xloc.bar_index, yloc=yloc.abovebar, size=size.normal, textcolor=color.white, color=color.new(color.purple, 50))

// 🔥 Convergence beacon marker
plotshape(all_sync, title="Convergence Beacon", location=location.abovebar, style=shape.triangleup, size=size.small, color=color.new(color.orange, 30))

plotshape(false)
